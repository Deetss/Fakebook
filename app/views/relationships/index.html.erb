<% provide(:title, "Friend Requests") %>
<h4>Friend Requests</h4>
<% current_user.current_requests.each do |r| %>
<div class="card">
    <div class="card-content valign-wrapper">
        <% unless r.accepted? %>
            <%= gravatar_for(r.requestee, img_class: "circle") %> 
            <span class="profile-link"><%= link_to r.requestee.name, r.requestee, class: "pad-left" %></span>
            <%= link_to 'accept', accept_path(:req => r), method: :put, action: :accept, class: "waves-effect waves-light btn btn-right" %>
        <% end %>
    </div>
</div>
<% end %>