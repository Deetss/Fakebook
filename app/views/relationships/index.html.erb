<% provide(:title, "Friend Requests") %>
<ul class="collection with-header">
    <li class="collection-header"><h4>Friend Requests</h4></li>

    <% current_user.rec_requests.each do |r| %>
    <li class="collection-item avatar">
            <% unless r.accepted? %>
                <%= gravatar_for(r.requestee, img_class: "circle") %>
                <%= link_to r.requestee.name, r.requestee %>
                <%= link_to 'accept', accept_path(:req => r), method: :put, action: :accept, class: "waves-effect waves-light btn right" %>
            <% end %>
    </li>
    <% end %>
</ul>