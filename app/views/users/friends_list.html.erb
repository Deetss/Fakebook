<% provide(:title, "#{@user.name}'s Friends") %>
<ul class="collection with-header">
    <li class="collection-header"><h4><%= @user.name %>'s Friends </h4>
    <% @user.friends_list.each do |friend| %>
    <li class="collection-item avatar">
      <%= user_img(friend, size: 48, img_class: "nav-img circle") %>
      <span class="title"><%= link_to friend.name, friend %></span>
      <% if current_user.friends_with?(@user) %>
        <%= link_to requests_path(user_name: @user.name), method: :delete, action: :destroy, class: "waves-effect waves-light btn" do %>
            <i class="material-icons">block</i>
            Unfriend
        <% end %>
      <% end %>
    </li>
    <% end %> 
</ul>